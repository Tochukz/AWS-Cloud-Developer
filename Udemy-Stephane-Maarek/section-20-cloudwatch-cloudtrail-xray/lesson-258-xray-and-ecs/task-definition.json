{
  "ContainerDefinitions": [
    {
      "name": "xray-daemon",
      "image": "123456789012.drk.ecr.us-east-2.amazonaws.com/xray-daemon",
      "cpu": 32,
      "memoryReservation": 256,
      "portMappings": [
        {
          "hostPort": 0,
          "containerPort": 2000,
          "protocol": "udp"
        }
      ]
    },
    {
      "name": "scorekeeper-api",
      "image": "123456789012.dkr.ecr.us-east-2.amazonaws.com/scorekeeper-api",
      "cpu": 192,
      "memoryReservation": 512,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-2"
        },
        {
          "name": "NOTIFICATION_TOPIC",
          "value": "arn:aws:sns:us-east-2:123456789012:scorekeeper-notifications"
        },
        {
          "name": "AWS_XRAY_DAEMON_ADDRESS", # Used by the X-Ray SDK to find the X-Ray daemon
          "value": "xray-daemon:2000"
        }
      ],
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "links": [
        "xray-daemon"
      ]
    }
  ]
}
